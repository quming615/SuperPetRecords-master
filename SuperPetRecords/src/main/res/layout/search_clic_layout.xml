<?xml version="1.0" encoding="utf-8"?>

<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kbc="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nearbySearch"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_width="375dp"
    android:layout_gravity="center"

    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/search_start"
        style="@style/FullWidthEventWrapper"
        android:background="@color/light_bluish"
        >
        <LinearLayout
            style="@style/FullWidthEventDashedLine"
            />
        <kbc.superpetrecords.views.widgets.ExtendedTextView
            android:text="附近查找"
            style="@style/FullWidthEventLabel"
            />
        <kbc.superpetrecords.views.widgets.ExtendedEditText
            android:id="@+id/startLocatuion"
            style="@style/FullWidthEventField"
            />
    </RelativeLayout>
    <!--<RelativeLayout
        android:id="@+id/search_end"
        style="@style/FullWidthEventWrapper"
        android:background="@color/light_bluish"
        >
        <LinearLayout
            style="@style/FullWidthEventDashedLine"
            />
        <kbc.superpetrecords.views.widgets.ExtendedTextView
            android:text="终点地址"
            style="@style/FullWidthEventLabel"
            />
        <kbc.superpetrecords.views.widgets.ExtendedEditText
            android:id="@+id/endLocation"
            android:hint=""
            style="@style/FullWidthEventField"
            />
    </RelativeLayout>-->
    <kbc.superpetrecords.views.widgets.ExtendedButton
        android:id="@+id/find_bike"
        android:text="查询附近"
        android:layout_width="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_height="40dp"/>
    <com.baidu.mapapi.map.MapView
        android:id="@+id/b_map_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"/>
</LinearLayout>
