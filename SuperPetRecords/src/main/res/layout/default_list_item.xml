<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:kbc="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/defaultListImage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        />
    <kbc.superpetrecords.views.widgets.ExtendedTextView
        android:id="@+id/defaultListName"
        android:layout_width="wrap_content"
        kbc:fontName="mohave.otf"
        android:paddingRight="20dp"
        android:layout_height="match_parent"
        android:textColor="#00ffff"
        />
    <kbc.superpetrecords.views.widgets.ExtendedTextView
        android:id="@+id/defaultListTime"
        kbc:fontName="mohave.otf"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textColor="#00ffff"
        />
</LinearLayout>