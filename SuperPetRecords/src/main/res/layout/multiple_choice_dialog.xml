<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:kbc="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/yellow_border"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minWidth="300dp"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:src="@drawable/alarmclock_badge"
            />
        <kbc.superpetrecords.views.widgets.ExtendedTextView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="15dp"
            android:gravity="center"
            android:id="@+id/multiple_choice_header_text"
            android:textColor="@color/black"
            android:textSize="20sp"
            kbc:fontName="mohave.otf"
            />
    </LinearLayout>
    <ListView
        android:id="@+id/multipleChoiceDialogList"
        android:divider="@android:color/transparent"
        android:dividerHeight="12.0sp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:paddingBottom="20dp"
        tools:listitem="@layout/multiple_choice_button"
        />
</LinearLayout>