<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >
    <item>
        <rotate
            android:fromDegrees="45"
            android:toDegrees="45"
            android:pivotX="97%"
            android:pivotY="138%">
            <shape android:shape="rectangle" >
                <stroke
                    android:color="@color/goldish"
                    android:width="1dp"
                    />
                <solid android:color="@color/maroonish" />
                <size
                    android:width="25dp"
                    android:height="25dp"
                    />
            </shape>
        </rotate>
    </item>
</layer-list>